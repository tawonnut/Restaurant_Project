<h2>Confirm User</h2>

<%= form_for(@user, url: user_url, method: :patch) do |f| %>
  <div class="col-lg-6 col-md-6 col-sm-6">
    <div class="form-group">
      <%= f.label "ชื่อจริง", class: 'control-label' %>
      <%= f.text_field :fullname, class: 'form-control', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label "ชื่อเล่น" %><br>
      <%= f.text_field :nickname, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "เบอร์โทรศัพท์" %><br>
      <%= f.text_field :phone_number, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "ที่อยู่-ที่ติดต่อได้" %><br>
      <%= f.text_field :address, class: 'form-control' %>
    </div>


    <div class="actions">
      <%= f.submit("Update UserProfile", class: "btn btn-primary") %>
    </div>
  </div>
<% end %>
