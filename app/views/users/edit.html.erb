

<%= form_for(@user, url: users_url, method: :patch) do |f| %>

<hr>
    <div class="panel panel-primary bigmshoadow" >
        <div class="panel-heading gradient"><h3><i class="glyphicon glyphicon-user"></i> แก้ไขข้อมูล </h3>  
      </div>
        <div class="panel-body ">
          <div class="form-horizontal">
      
            <div class="form-group">
                <%= f.label :name ,"ชื่อ :",class: "col-sm-2 control-label"%>
                <div class="col-sm-4">
                  <%= f.text_field :name, class: "form-control"%>
                 </div>
            </div>

            <div class="form-group">
              <%= f.label :surname ,"นามสกุล :",class: "col-sm-2 control-label"%>
                <div class="col-sm-4">
                  <%= f.text_field :surname, class: "form-control" %>
                </div>
            </div>

            <div class="form-group">
              <%= f.label :tel ,"เบอโทรศัพท์ :",class: "col-sm-2 control-label"%>
                <div class="col-sm-4">
                  <%= f.text_field :tel , class: "form-control" %>
                </div>           
            </div>



            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <div class="actions">
                  <%= f.submit("ยืนยัน", class: "btn btn-success") %>
                  <%= link_to "กลับ", new_user_session_path, class: "btn btn-danger" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= link_to "เปลี่ยนรหัสผ่าน" , edit_user_registration_path%>
              </div>
            </div>
          </div>       
        </div>      
   </div>
<% end %>   