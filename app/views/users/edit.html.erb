<%= form_for(@user, url: users_url, method: :patch) do |f| %>

<hr>
    <div class="panel panel-primary bigmshoadow" >
        <div class="panel-heading gradient"><h3><i class="glyphicon glyphicon-user"></i> Edit </h3>  
      </div>
        <div class="panel-body ">
          <div class="form-horizontal">
      
            <div class="form-group">
                <%= f.label :name ,"Name :",class: "col-sm-2 control-label"%>
                <div class="col-sm-4">
                  <%= f.text_field :name, class: "form-control"%>
                 </div>
            </div>

            <div class="form-group">
              <%= f.label :surname ,"Surname :",class: "col-sm-2 control-label"%>
