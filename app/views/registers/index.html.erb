<hr>

	<h2>  แสดงพนักงานทั้งหมด </h2><hr>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">รายชื่อพนักงานทั้งหมด</h3>
      </div>
        <div class="panel-body">
			<table class="table table-striped table-hover table-condensed">
			    <thead>
			      <tr>
			        
			        <th>ชื่อ</th>
			        <th>นามสกุล</th>
			        <th>อีเมลล์</th>
			        <th>เบอร์โทรศัพ</th>
		        			     
			      </tr>
			    </thead>

			    <tbody>
			      <% @users.each_with_index do |f| %>
				      <tr>
				        <%if f.super_user %>	 		 
			              		
						        <td><%= f.name %></td>
						        <td><%= f.surname %></td>
						        <td><%= f.email %></td>
						        <td><%= f.tel %></td>
						      
						        <td><center><font color =red> เจ้าของร้าน </font></center></td>
						        <td></td>

					        <% else%>
						        
						        <td><%= f.name %></td>
						        <td><%= f.surname %></td>
						        <td><%= f.email %></td>
						        <td><%= f.tel %></td>
						        <td><%= link_to 'Delete', showuser_path(f), method: :delete, data: { confirm: 'Are you sure?' } %><td>
		
			          <%end%>
				      </tr>
				   <%end%>
			  </tbody>
			</table>
		</div>
	</div>


			 <%= link_to "เพิ่มพนักงาน", new_register_path, class: "btn btn-success" %>
