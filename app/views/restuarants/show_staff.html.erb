    <div class="panel panel-primary bigmshoadow" > 
        <div class="panel-heading gradient">
       		<div class="col-md-6">
			<h3 style=" margin-top: 2%;"><i class="fa fa-users">&nbsp;</i> 
      		พนักงานทั้งหมด
        	</h3>
       </div>
             <div class="text-right">
             	<button  type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal"> <i class="fa fa-user-plus"></i> เพิ่มพนักงาน</button>
            </div>
        </div>
        <div class="panel-body ">
          <div class="form-horizontal">
      </div>
        <div class="panel-body">
			<table class="table table-striped table-hover table-condensed">
			    <thead>
			      <tr>
			        <th>ชื่อ</th>
			        <th>นามสกุล</th>
			        <th>อีเมล</th>
			        <th>เบอร์โทรศัพท์</th>
			        <th>สถานะ</th>
		        			     
			      </tr>
			    </thead>


			    <tbody>
			      <% @membership.each_with_index do |f| %>
				      <tr>
				        <%if f.user.super_user %>	 		 
			              		
						        <td><%= f.user.name %></td>
						        <td><%= f.user.surname %></td>
						        <td><%= f.user.email %></td>
						        <td><%= f.user.tel %></td>
						        <td><font color = red> เจ้าของร้าน </font></td>
						        <td></td>

					        <% else%>
						        
						        <td><%=  f.user.name %></td>
						        <td><%=  f.user.surname %></td>
						        <td><%=  f.user.email %></td>
						        <td><%=  f.user.tel %></td>
						        <td><font color = green> พนักงาน </font></td>
						        <td><%= link_to showuser_path(f), method: :delete, data: { confirm: 'ยืนยันการลบ' }, 
                					class: 'btn btn-danger' do %><i class="fa fa-trash-o" ></i> ลบ <%end%></td>
		
			          <%end%>
				      </tr>
				   <%end%>
			  </tbody>
			</table>
		</div>
	</div>

 <%= form_for(@restuarant_show, url: add_staff_restuarant_url,method: :post) do |f| %>	

