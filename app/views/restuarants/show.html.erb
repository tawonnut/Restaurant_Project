

<%= form_for(@table, url: tables_url, method: :post) do |f| %>    
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        เพิ่มโต๊ะ
     </div>
      <div class="modal-body">
          <div class="form-horizontal">
      
            <div class="form-group">
              <label>จำนวนโต๊ะที่ต้องการ</label>
                <div class="col-sm-4">
                  <input type = "number" name="table" min="1" max="10" class="form-control" value="1">  </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <div class="actions">
                  <%= f.submit("ยืนยัน", class: "btn btn-success") %>
                  <%= link_to "กลับ", restuarant_path, class: "btn btn-danger" %>
                </div>
              </div>
            </div>

          </div>       
   </div>

  </div>
</div>    
</div> 
<%end%>

<div><h2>ร้าน <%= @restuarant_show.restuarant_name %></h2> </div>

        <div class="container">
                <div class="panel bg-body">

                    <div class="panel-heading bg-header">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>หมายเลขโต๊ะ</th>
                                <th>Table ID.</th>
                                <th>การจัดการ</th>
                            </tr>
                        </thead>
                        <tbody>
                                <% @table_show.each_with_index do |a, i| %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%=a.id%></td>
                                <td>
                                    <i class="fa fa-ellipsis-v"></i>
                                    <%= link_to "สั่งอาหาร", menu_list_path(a), class: "btn btn-success" %>
                                    <i class="fa fa-ellipsis-v"></i>
                                    <%= link_to "เช็คบิล", edit_restuarant_path(a), class: "btn btn-primary" %>
                                    <i class="fa fa-ellipsis-v"></i>
                                    <%= link_to 'ลบข้อมูลโต๊ะ', table_path(a), class: "btn btn-danger" , method: :delete, data: { confirm: 'คุณต้องการลบโต๊ะ?' }  %>
                                    <i class="fa fa-ellipsis-v"></i>
                                    <%end%>

                                </td>
                            </tr>
                            <tr>
                                
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>


