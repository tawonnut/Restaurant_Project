<%= form_for(@table, url: tables_url, method: :post) do |f| %>    
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        เพิ่มโต๊ะ
      </div>
      <div class="modal-body">
          <div class="form-horizontal">
      
            <div class="form-group">
              <label>จำนวนโต๊ะที่ต้องการ</label>
                <div class="col-sm-4">
                  <input type = "number" name="table" min="1" max="10" class="form-control" value="1">  </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <div class="actions">
                  <%= f.submit("ยืนยัน", class: "btn btn-success") %>
                  <%= link_to "กลับ", restuarant_path, class: "btn btn-danger" %>
                </div>
              </div>
            </div>

          </div>       
      </div>

  </div>
</div>    
</div> 
<%end%>

<div><h2>ร้าน <%= @restuarant_show.restuarant_name %></h2> </div>

  
    <% @table_show.each_with_index do |a, i| %>
      <div class="col-sm-3 text-center">
        <button class="btn btn-success" type="button">
           โต๊ะที่ <span class="badge"><%= i+1 %></span>
        </button>
        <%=link_to( image_tag("table.jpg"), menu_list_path(a)) %><br>
        <%= link_to 'ลบข้อมูลโต๊ะ', table_path(a), class: "btn btn-danger" , method: :delete, data: { confirm: 'คุณต้องการลบโต๊ะ?' }  %> 
        <hr>                  
      </div>  
    <%end%>
