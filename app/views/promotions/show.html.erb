<hr>
    <div class="panel panel-primary bigmshoadow" >
        <div class="panel-heading gradient">
       		<div class="col-md-6">
			<h3 style=" margin-top: 2%;"><i class="fa fa-usd">&nbsp;</i> 
      		ส่วนลด-โปรโมชั่น
        	</h3>
       </div>
             <div class="text-right">
             	<button  type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal"><i class="fa fa-search-plus"></i>
                เพิ่มส่วนลด</button>
            </div>
        </div>
        <div class="panel-body ">
          <div class="form-horizontal">
      </div>
        <div class="panel-body">
			<table class="table table-striped table-hover table-condensed">
			    <thead>
			      <tr class="info">
			        <th>ลำดับ</th>
			        <th>ชื่อ</th>
			        <th>อัตราส่วนลด(%)</th>
              <th></th>
		        			     
			      </tr>
			    </thead>

			    <tbody>
			      <% @promotion.each_with_index do |f, i| %>
				      <tr>	 
			             <td><%= i + 1 %></td>
						       <td><%= f.promotion_name %></td>
                   <td><%= f.promotion_discount %></td>
						       <td class = "text-right"><%= link_to edit_promotion_path(f), class: 'btn btn-info' do %><i class="fa fa-pencil-square-o" ></i>เเก้ไข
                   <%end%>
						       <%= link_to promotion_path(f), method: :delete, data: { confirm: 'ยืนยันการลบ' }, 
                    class: 'btn btn-danger' do %><i class="fa fa-trash-o" ></i> ลบ
                    <%end%></td>
			          <%end%>
				      </tr>
			  </tbody>
			</table>
  </div>
     	</div>
     	</div>

<%= form_for(@promotions, url: promotion_url, method: :patch) do |f| %>

<!-- Modal -->
<form>
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

        <h4 class="modal-title" id="myModalLabel">เพิ่มโปรโมชัน</h4>

     </div>
      <div class="modal-body">
  <div class="form-group">
   <label>ชื่อโปรโมชัน</label>
    <input type="text" class="form-control" name="promotion_name">
 </div>
  <div class="form-group">
  	<div class="input-group">
   	<label>ส่วนลด</label>
          <div class="input-group">

         <input type="text" class = "form-control" name= "promotion_discount">

          <div class="input-group-addon">เปอร์เซ็นต์</div>

         </div>
    </div>

     </div>

      <div class="modal-footer">

        <%= f.submit "ยืนยัน",class: "btn btn-success" %>
      </div>
   </div>
  </div>
</div>
</div>
</form>
<%end%>

