              </div>

              <div class="col-md-6">
                <%= link_to clear_table_menu_list_path, data: { confirm: 'คุณต้องการเคลียโต๊ะ?'  }, 
                class: 'btn btn-danger btn-lg btn-block' do %><i class="fa fa-ban" > ปิดโต๊ะ</i>
                <%end%>
              </div>
            </div>
            <div>&nbsp;</div>
            <div class="row">
               <div class="col-md-6 col-md-offset-3" onclick="openDrawer()">
                  <%= button_tag( :class => "btn btn-info btn-lg btn-block") do %>
                  <i class="fa fa-eject"></i>&nbsp;Open Drawer 
                  <% end %>
              </div>
            </div>
          </div>  

      
