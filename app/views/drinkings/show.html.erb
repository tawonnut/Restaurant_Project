						        <td><%= link_to 'ลบ',  drinking_path(f), class: "btn btn-danger"  ,method: :delete, data: { confirm: 'ต้องการจะลบ?' } %></td>
			      				<%end%>
				      </tr>
			  </tbody>
			</table>
  		</div>
     </div>
 </div>
