<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %> 
<hr>
    <div class="panel panel-primary bigmshoadow" >
      <div class="panel-heading gradient"><h3><i class="glyphicon glyphicon-user"></i> ตั้งค่ารหัสผ่าน</h3>  
      </div>
        <div class="panel-body ">
         <div class="form-horizontal">

           <div class="form-group">
            <%= f.label :password ,"รหัสผ่านใหม่ :",class: "col-sm-2 control-label"%>
              <div class="col-sm-4">
                <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
              </div>
          </div>

          <div class="form-group">
    <%= f.label :password_confirmation ,"ยืนยันรหัสผ่านใหม่ :",class: "col-sm-2 control-label"%>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
      </div>
</div>
           <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "ยืนยัน",class: "btn btn-success" %>
            </div>
          </div>
      </div>    
    </div> 
  </div>   
<% end %>

