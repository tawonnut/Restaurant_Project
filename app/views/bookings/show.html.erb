<hr>

    <div class="panel panel-primary bigmshoadow" >
        <div class="panel-heading gradient">
       		<div class="col-md-6">
			<h3 style=" margin-top: 2%;"><i class="fa fa-pencil-square-o"></i> รายการจองโต๊ะ
        	</h3>
       </div>
             <div class="text-right">
             	<button  type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal"><i class="fa fa-search-plus"></i>
                เพิ่มการจอง </button>
            </div>
        </div>
        <div class="panel-body ">
          <div class="form-horizontal">
      </div>
        <div class="panel-body">
			<table class="table table-striped table-hover table-condensed">
			    <thead>
			      <tr class="info">
			        <th class="text-center">ลำดับ</th>
			        <th class="text-center">วันที่</th>
			        <th class="text-center">เวลาจอง</th>
              <th class="text-center">ชื่อผู้จอง</th>
              <th class="text-center">จำนวน(คน)</th>
              <th class="text-center">เบอร์ติดต่อ</th>
              <th></th>
			      </tr>
			    </thead>

			    <tbody>
			      <% @booking.each_with_index do |f, i| %>
				      <tr>	 
			             <td class="text-center"> <%= i + 1 %> </td>
						       <td class="text-center"> <%= f.booking_date %> </td>
                   <td class="text-center"> <%= f.booking_time %> </td>
                   <td class="text-center"> <%= f.booking_name %> </td>
                   <td class ="text-center"> <%= f.booking_person %> </td>
                   <td class="text-center"> <%= f.booking_tel %></td>
						       <td class = "text-right"><%= link_to edit_booking_path(f), class: 'btn btn-info' do %><i class="fa fa-pencil-square-o" ></i>เเก้ไข
                   <%end%>
						       <%= link_to booking_path(f), method: :delete, data: { confirm: 'ยืนยันการลบ' }, 
                    class: 'btn btn-danger' do %><i class="fa fa-trash-o" ></i> ลบ
                    <%end%></td>
			          <%end%>
				      </tr>
			  </tbody>
			</table>
  </div>
     	</div>
     	</div>

<%= form_for(@bookings, url: booking_url, method: :patch) do |f| %>

<!-- Modal -->

	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

        <h4 class="modal-title" id="myModalLabel">รายละเอียดการจอง</h4>

     </div>
      
      <div class="modal-body">
 <form>
  <div class="form-group">
   <label> ชื่อลูกค้า : </label>
    <input type="text" class="form-control" name="booking_name">
 </div>

  <div class="form-group">
   <label> เบอร์ติดต่อลูกค้า : </label>
    <input type="text" class="form-control" name="booking_tel">
 </div>

 <div class="form-group">
    <label>จำนวน :</label>
    <div class="input-group">
      <input type="text" class = "form-control" name= "booking_person">
        <div class="input-group-addon">คน</div>
    </div>
  </div>

<div class="form-group">
   <label> วันที่ : </label>
   <div class="row">
   <div class="col-sm-9">
   <%= text_field_tag 'booking_date',Date.today.strftime("%Y-%m-%d"),readonly: true, id: 'today_date_picked',class: "form-control"%>
   </div>
   <div class="col-sm-0.1">
      <button type="button" class="btn btn-warning show-datepicker" data-target="#today_date_picked">
        <span class="fa fa-calendar"></span>
        </button>
        </div>
        </div>
 </div>
  
  <div class="form-group">
   <label> เวลาจอง : </label>
   <div class="row">
   <div class="col-sm-9">
   <%= text_field_tag 'booking_time',Time.now(),class: "form-control"%>
   </div>
   <div class="col-sm-0.1">
      <button type="button" class="btn btn-info  " data-target="#today_date_picked">
        <span class="fa fa-clock-o"></span>
        </button>
        </div>
        </div>
 </div>
 
     </form>

      <div class="modal-footer">
        <%= f.submit "ยืนยัน",class: "btn btn-success" %>
      </div>
   </div>
  </div>
</div>
</div>

<%end%>
